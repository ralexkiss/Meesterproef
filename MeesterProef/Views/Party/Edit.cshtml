@model Meesterproef.Models.PartyViewModel
@{
    ViewData["Title"] = "Edit Party";
}
<h1>Edit Party</h1>
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" asp-controller="Party">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Abbreviation" class="control-label"></label>
                <input asp-for="Abbreviation" placeholder="@ViewBag.Party.Abbreviation" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" placeholder="@ViewBag.Party.Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Leader" class="control-label"></label>
                <textarea asp-for="Leader" placeholder="@ViewBag.Party.Leader" class="form-control"></textarea>
                <span asp-validation-for="Leader" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="button"/>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-area="" asp-controller="Party" asp-action="Index">Back to all parties.</a>
</div>