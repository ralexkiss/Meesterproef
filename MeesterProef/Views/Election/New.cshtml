@model Meesterproef.Models.ElectionViewModel
@{
    ViewData["Title"] = "Project";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<head>
    <title>Nieuw Verkiezing</title>
</head>
<body>
    <div class="row">
        <div class="col-md-4">
            <section>
                 <form asp-action="new" enctype="multipart/form-data">
                     <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                     <div class="form-group">
                         <label asp-for="Name"></label>
                         <input asp-for="Name" class="form-control"/>
                         <span asp-validation-for="Name" class="text-danger"></span>
                     </div>

                     <div class="form-group">
                         <label asp-for="DistributableSeats"></label>
                         <input asp-for="DistributableSeats" class="form-control" />
                         <span asp-validation-for="DistributableSeats" class="text-danger"></span>
                     </div><div class="form-group">
                         <label asp-for="Date"></label>
                         <input asp-for="Date" asp-format="{0:dd/MM/yyyy}" class="form-control"></input>
                         <span asp-validation-for="Date" class="text-danger"></span>
                     </div>
                     <div class="form-group">
                         <button type="submit" class="button">Create Election</button>
                     </div>
                 </form>
            </section>
        </div>
    </div>
</body>